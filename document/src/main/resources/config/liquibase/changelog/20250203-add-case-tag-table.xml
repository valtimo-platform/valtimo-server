<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Ritense" id="1">
        <createTable tableName="case_tag">
            <column name="case_tag_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="case_definition_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="case_tag_title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="case_tag_color" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="case_tag" columnNames="case_tag_key, case_definition_name"
                       constraintName="pk_case_tag"/>
    </changeSet>


</databaseChangeLog>