<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Ritense" id="2">
        <createTable tableName="case_tag_link">
            <column name="case_tag_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="case_definition_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="json_schema_document_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="case_tag_link"
                       columnNames="case_tag_key, case_definition_name, json_schema_document_id"
                       constraintName="pk_case_tag_link"/>

        <addForeignKeyConstraint baseTableName="case_tag_link"
                                 baseColumnNames="case_tag_key, case_definition_name"
                                 referencedTableName="case_tag"
                                 referencedColumnNames="case_tag_key, case_definition_name"
                                 constraintName="fk_case_tag_link_case_tag"/>

        <addForeignKeyConstraint baseTableName="case_tag_link"
                                 baseColumnNames="json_schema_document_id"
                                 referencedTableName="json_schema_document"
                                 referencedColumnNames="json_schema_document_id"
                                 constraintName="fk_case_tag_link_json_schema_document_id"/>

        <createIndex indexName="idx_case_tag_link_json_schema_document_id" tableName="case_tag_link">
            <column name="json_schema_document_id"/>
        </createIndex>

        <createIndex indexName="idx_case_tag_link_case_tag_id" tableName="case_tag_link">
            <column name="case_tag_key"/>
            <column name="case_definition_name"/>
        </createIndex>

        <addUniqueConstraint tableName="case_tag_link"
                             columnNames="case_tag_key, case_definition_name, json_schema_document_id"
                             constraintName="uk_case_tag_link"/>
    </changeSet>
</databaseChangeLog>
